{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noDefaultExport": "off",
        "noUselessElse": "error",
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "useTemplate": "info"
      },
      "correctness": {
        "useExhaustiveDependencies": "info",
        "noUnusedImports": "warn"
      },
      "performance": {
        "noDelete": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      }
    }
  },

  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5"
    }
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  }
}